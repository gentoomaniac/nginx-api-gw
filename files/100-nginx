#!/bin/bash -ue
con=$(curl -s 127.0.0.1/status/connections/active)
req=$(curl -s 127.0.0.1/status/requests/total)
echo -e "                  Y.                      _"
echo -e "                  YiL                   .\`\`\`."
echo -e "                  Yii;     \033[01;36mWOW\033[0m       .; .;;\`."
echo -e "                  YY;ii._           .;\`.;;;; :"

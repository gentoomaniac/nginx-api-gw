echo -e "              _.;YYYYYYiiiiiiYYYii  .;;.   ;;;"
echo -e "           .YYYYYYYYYYiiYYYYYYYYYYYYii;\`  ;;;;"
echo -e "         .YYYYYYY\$\$YYiiYY\$\$\$\$iiiYYYYYY;.ii;\`.."
echo -e "        :YYY\$!.  TYiiYY\$\$\$\$\$YYYYYYYiiYYYYiYYii."
echo -e "        Y\$MM\$:   :YYYYYY\$!\"\`\`\"4YYYYYiiiYYYYiiYY."
echo -e "     \`. :MM\$\$b.,dYY\$\$Yii\" :'   :YYYYllYiiYYYiYY"
echo -e "  _.._ :\`4MM\$!YYYYYYYYYii,.__.diii\$\$YYYYYYYYYYY"
echo -e "  .,._ \$b\`P\`     \"4\$\$\$\$\$iiiiiiii\$\$\$\$YY\$\$\$\$\$\$YiY;"
echo -e "     \`,.\`\$:       :\$\$\$\$\$\$\$\$\$YYYYY\$\$\$\$\$\$\$\$\$YYiiYYL"
echo -e "      \"\`;\$\$.    .;PPb\$\`.,.\`\`T\$\$YY\$\$\$\$YYYYYYiiiYYU:"
echo -e "    ' ;\$P\$;;: ;;;;i\$y\$\"!Y\$\$\$b;\$\$\$Y\$YY\$\$YYYiiiYYiYY"
echo -e "      \$Fi\$\$ .. \`\`:iii.\`-\";YYYYY\$\$YY\$\$\$\$\$YYYiiYiYYY \033[01;36mVERRY HA\033[0m"
echo -e "      :Y\$\$rb \`\`\`\`  \`_..;;i;YYY\$YY\$\$\$\$\$\$\$YYYYYYYiYY:"
echo -e "       :$\$\$\$\$i;;iiiiidYYYYYYYYYY$\$\$\$\$\$YYYYYYYiiYYYY."
echo -e "        \`\$\$\$\$\$\$\$YYYYYYYYYYYYY\$\$\$\$\$\$YYYYYYYYiiiYYYYYY"
echo -e "        .i!\$\$\$\$\$\$YYYYYYYYY\$\$\$\$\$\$YYY\$\$YYiiiiiiYYYYYYY"
echo -e "       :YYiii\$\$\$\$\$\$\$YYYYYYY\$\$\$\$YY\$\$\$\$YYiiiiiYYYYYYi' "
echo -e ""
echo -e "            \033[01;36mMUCH ROUTE\033[0m : I've routed \033[01;34m$req\033[0m requests"
